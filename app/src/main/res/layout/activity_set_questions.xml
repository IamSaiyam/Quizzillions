<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetQuestions"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/artsetquesitons"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:adjustViewBounds="true" />

                <TextView
                    android:text="Set Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/blue_back"
                    android:fontFamily="@font/baloo"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>

                <View
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="@color/blue_back"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:id="@+id/question_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:fontFamily="@font/baloo"
                        android:text="Q1"
                        android:textColor="@color/darkGray" />

                    <EditText
                        android:id="@+id/questionET"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:background="@drawable/black_border" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:layout_marginRight="20dp">

                        <RadioButton
                            android:id="@+id/op1RB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:buttonTint="@color/blue_back"
                            android:fontFamily="@font/baloo"
                            />

                        <EditText
                            android:id="@+id/op1ET"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:background="@drawable/black_border"
                            android:textSize="16sp"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"/>

                        <RadioButton
                            android:id="@+id/op2RB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:textSize="16dp"
                            android:buttonTint="@color/blue_back"
                            android:fontFamily="@font/baloo" />

                    <EditText
                        android:id="@+id/op2ET"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/black_border"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:layout_marginRight="20dp">

                    <RadioButton
                        android:id="@+id/op3RB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:buttonTint="@color/blue_back"
                        android:fontFamily="@font/baloo" />

                    <EditText
                        android:id="@+id/op3ET"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/black_border"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"/>

                    <RadioButton
                        android:id="@+id/op4RB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"
                        android:buttonTint="@color/blue_back"
                        android:fontFamily="@font/baloo" />

                    <EditText
                        android:id="@+id/op4ET"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/black_border"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp">
                <TextView
                    android:id="@+id/addQuesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@color/blue_back"
                    android:fontFamily="@font/baloo"
                    android:text="Add Question" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/prevQuesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/blue_back"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/blue_border"
                    android:fontFamily="@font/baloo"
                    android:text="Previous Question" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>